
<%- include ('partials/header.ejs'); %>

<body>
    <%- include ('partials/navbar.ejs'); %>
    
    <div class="container">
        <br>
        <h1>My notes</h1>
        <hr>
        <a href="/newnote"><button type="button" class="btn btn-light">New note</button></a>
        <hr>
        <% notes.forEach(note => { %>

            <div class="card text-white bg-secondary mb-3">
                <div class="card-header">
                    <h3><%= note.title %></h3>
                </div>
                <div class="card-body">
                    <p><%= note.content %></p>
                    <hr>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>

        <% }) %>
    </div>

</body>

<%- include ('partials/footer.ejs'); %>
